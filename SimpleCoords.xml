<Ui xmlns="http://www.blizzard.com/wow/ui" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
<!-- SimpleCoords -->
<Frame
	name="SimpleCoordsFrame"
	toplevel="true"
	enableMouse="true"
	movable="true"
	parent="UIParent"
	hidden="false"
	inherit="BackdropTemplate"
	>

	<Size>
		<AbsDimension x="76" y="21"/>
	</Size>
	<Anchors>
		<Anchor point="CENTER">
		</Anchor>
	</Anchors>

	<Backdrop name="$parentBackdrop"
		tile="true">
		<EdgeSize>
			<AbsValue val="16"/>
		</EdgeSize>
		<BackgroundInsets>
			<AbsInset left="5" right="5" top="5" bottom="5"/>
		</BackgroundInsets>
	</Backdrop>

	<Layers>
		<Layer level="ARTWORK">
			<FontString name="Simple_CoordsText"
			inherits="GameFontNormalSmall"
			text="---"
			>
				<Anchors>
					<Anchor point="CENTER">
						 <Offset x="0" y="0"/>
					</Anchor>
				</Anchors>
			</FontString>
		</Layer>
	</Layers>

	<Frames>
		<EditBox name="SimpleCoords_X"
		inherits="InputBoxTemplate"
		autoFocus="false"
		hidden="true"
		>
			<Size>
				<AbsDimension x="30" y="26"/>
			</Size>
			<Anchors>
				<Anchor
					point="TOPLEFT"
					relativePoint="BOTTOMLEFT"
					relativeTo="SimpleCoordsFrame"
				>
					<Offset>
							<AbsDimension x="7" y="5"/>
					</Offset>
				</Anchor>
			</Anchors>
			 <Scripts>
				<OnTabPressed>
					_G["SimpleCoords_Y"]:SetFocus();
				</OnTabPressed>
				<OnSpacePressed>
					_G["SimpleCoords_Y"]:SetFocus();
				</OnSpacePressed>
				<OnEnterPressed>
					self:ClearFocus(); <!-- was "this" -->
					SCoordsAddon.AcceptValue();
				</OnEnterPressed>
				<OnEnter>
					SCoordsAddon.ShowTooltip();
				</OnEnter>
				<OnLeave>
					SCoordsAddon.HideTooltip();
				</OnLeave>
			</Scripts>
		</EditBox>


		<EditBox name="SimpleCoords_Y"
		inherits="InputBoxTemplate"
		autoFocus="false"
		hidden="true"
		>
			<Size>
				<AbsDimension x="30" y="26"/>
			</Size>
			<Anchors>
				<Anchor
					point="TOPRIGHT"
					relativePoint="BOTTOMRIGHT"
					relativeTo="SimpleCoordsFrame"
				>
					<Offset>
							<AbsDimension x="-1" y="5"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnEnterPressed>
					self:ClearFocus(); <!-- was "this" -->
					SCoordsAddon.AcceptValue();
				</OnEnterPressed>
				<OnTabPressed>
					_G["SimpleCoords_X"]:SetFocus();
				</OnTabPressed>
				<OnEnter>
					SCoordsAddon.ShowTooltip();
				</OnEnter>
				<OnLeave>
					SCoordsAddon.HideTooltip();
				</OnLeave>
			</Scripts>
		</EditBox>
	</Frames>

	<Scripts>
		<OnLoad>
			self:SetClampedToScreen(1); <!-- was "this" -->
			if BackdropTemplateMixin then
				self.background = CreateFrame("Frame", nil, self, "BackdropTemplate")
				self.background:SetAllPoints()
				self.background:SetBackdrop(BACKDROP_TOOLTIP_8_8_1111)
				self.background:SetBackdropColor(.1, .1 , .1, .7)
    		self.background:SetFrameLevel(self:GetFrameLevel())
      	end
		</OnLoad>
		<OnEnter>
			SCoordsAddon.ShowTooltip();
		</OnEnter>
		<OnLeave>
			SCoordsAddon.HideTooltip();
		</OnLeave>

		<OnUpdate script="SCoordsAddon_OnUpdate"/>

		<OnMouseDown>
			if ( IsShiftKeyDown() ) then
					self:StartMoving(); <!-- was "this" -->
				else
					SCoordsAddon.TogglePanel();
				end
		</OnMouseDown>
		<OnMouseUp>self:StopMovingOrSizing();</OnMouseUp> <!-- was "this" -->
		<OnDragStop>self:StopMovingOrSizing();</OnDragStop> <!-- was "this" -->
	</Scripts>
</Frame>

</Ui>
